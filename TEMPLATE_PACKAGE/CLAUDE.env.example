# CLAUDE.env - Project Configuration for Claude
# This file defines project-specific context for Claude to work accurately
# Copy this to CLAUDE.env in your project root and fill in your project details
# IMPORTANT: Add CLAUDE.env to your .gitignore to protect sensitive data

# ==========================================
# PROJECT IDENTITY
# ==========================================
PROJECT_NAME="Your Project Name"
PROJECT_TYPE="Web App"  # Options: Web App|CLI Tool|Library|Service|API|Mobile App|Desktop App|Other
PRIMARY_LANGUAGE="TypeScript"  # Options: TypeScript|Python|Go|Java|Rust|C++|Other
PROJECT_STATUS="Active Development"  # Options: Planning|Active Development|Maintenance|Production|Archived

# ==========================================
# GIT & GITHUB CONFIGURATION
# ==========================================
GIT_REPO_URL="https://github.com/username/repo"
GITHUB_PROJECT_BOARD="https://github.com/username/repo/projects/1"
GITHUB_OWNER="username"
GITHUB_REPO="repo-name"
CURRENT_BRANCH="main"
ACTIVE_SPRINT="Sprint_1"

# ==========================================
# PROJECT PATHS (relative to project root)
# ==========================================
DOCS_PATH="./docs"
SPECS_PATH="./Project_Management/Specs"
TESTS_PATH="./tests"
SRC_PATH="./src"
ARCHIVE_PATH="./Archive"
PROJECT_MGMT_PATH="./Project_Management"
SPRINT_EXECUTION_PATH="./Project_Management/Sprint_Execution"

# ==========================================
# DEVELOPMENT COMMANDS
# ==========================================
# Package manager (npm|yarn|pnpm|pip|cargo|go|other)
PACKAGE_MANAGER="npm"

# Core commands
INSTALL_COMMAND="npm install"
TEST_COMMAND="npm test"
BUILD_COMMAND="npm run build"
LINT_COMMAND="npm run lint"
TYPECHECK_COMMAND="npm run typecheck"
START_COMMAND="npm start"
DEV_COMMAND="npm run dev"

# Quality checks
COVERAGE_COMMAND="npm run coverage"
SECURITY_AUDIT_COMMAND="npm audit"
FORMAT_COMMAND="npm run format"

# ==========================================
# TEAM & WORKFLOW SETTINGS
# ==========================================
TEAM_SIZE="1"
SPRINT_DURATION_WEEKS="2"
SPRINT_POINT_TARGET="30"
MAX_STORY_POINTS_PER_TICKET="5"
VELOCITY_TARGET="15"  # Points per week

# ==========================================
# STAD PROTOCOL SETTINGS
# ==========================================
USE_STAD_PROTOCOL="true"
ENABLE_STAGE_GATES="true"
REQUIRE_HUMAN_APPROVAL="true"
AUTO_EXECUTE_SPRINTS="false"
ZERO_INTERVENTION_STAGE2="true"

# Stage-specific settings
STAGE1_MAX_AGENTS="3"  # For sprint planning
STAGE2_MAX_AGENTS="5"  # For sprint execution
ENABLE_PREDICTIVE_PLANNING="true"
ENABLE_AUTO_FIX="false"

# ==========================================
# QUALITY REQUIREMENTS
# ==========================================
MIN_TEST_COVERAGE="80"
MAX_COMPLEXITY_SCORE="10"
ENFORCE_LINTING="true"
REQUIRE_CODE_REVIEW="true"
REQUIRE_SECURITY_REVIEW="false"

# ==========================================
# TECHNOLOGY STACK (for context)
# ==========================================
FRONTEND_FRAMEWORK=""  # React|Vue|Angular|Svelte|None
BACKEND_FRAMEWORK=""   # Express|FastAPI|Django|Spring|None
DATABASE_TYPE=""        # PostgreSQL|MySQL|MongoDB|SQLite|None
CLOUD_PROVIDER=""       # AWS|GCP|Azure|Vercel|Netlify|None
CI_CD_PLATFORM=""       # GitHub Actions|GitLab CI|Jenkins|CircleCI|None

# ==========================================
# OPTIONAL INTEGRATIONS
# ==========================================
# Monitoring & Observability
SENTRY_DSN=""
DATADOG_API_KEY=""
NEW_RELIC_LICENSE_KEY=""

# Communication
SLACK_WEBHOOK_URL=""
SLACK_CHANNEL=""
DISCORD_WEBHOOK_URL=""
TEAMS_WEBHOOK_URL=""

# Project Management
JIRA_PROJECT_KEY=""
JIRA_API_TOKEN=""
LINEAR_API_KEY=""
NOTION_API_KEY=""

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_DEBUG_MODE="false"
ENABLE_PERFORMANCE_TRACKING="true"
ENABLE_ERROR_REPORTING="true"
ENABLE_ANALYTICS="false"
USE_EXPERIMENTAL_FEATURES="false"

