# GitHub Configuration (for GitHub CLI - `gh`)
# Get your token from: GitHub Settings > Developer settings > Personal access tokens
# Required scopes: repo, project (for project boards), workflow (for actions)
# We use GitHub CLI (`gh`) for all GitHub operations, NOT MCP
GITHUB_TOKEN=your_github_token_here
GITHUB_OWNER=your_username
GITHUB_REPO=your_repo_name

# Project Configuration
PROJECT_NAME="Your Project Name"
PROJECT_TYPE="Web App"
PRIMARY_LANGUAGE="TypeScript"
PROJECT_STATUS="Active Development"

# Development Settings
NODE_ENV=development
PORT=3000
DEBUG=false

# Database Configuration (if applicable)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=your_database
# DB_USER=your_user
# DB_PASSWORD=your_password

# API Keys (if applicable)
# API_KEY=your_api_key_here
# SECRET_KEY=your_secret_key_here

# MCP Tool Configuration
MCP_FILESYSTEM_ENABLED=true
MCP_MEMORY_ENABLED=true
# GitHub operations use CLI (`gh` command), not MCP

# STAD Protocol Settings
SPRINT_DURATION_WEEKS=2
SPRINT_POINT_TARGET=30
MAX_STORY_POINTS=5
REQUIRE_STAGE_GATES=true

# Agent Configuration
MAX_PARALLEL_AGENTS=5
AGENT_TIMEOUT_MINUTES=30
ENABLE_AUTO_FIX=false

# Notification Settings (optional)
# SLACK_WEBHOOK_URL=
# EMAIL_NOTIFICATIONS=false

# Feature Flags
ENABLE_DEBUG_MODE=false
ENABLE_PERFORMANCE_TRACKING=true
ENABLE_ERROR_REPORTING=true